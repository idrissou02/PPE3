{% extends 'base.html.twig' %}

{% block title %}Fiche album{% endblock %}

{% block body %}
<h1 class="pt-2 text-center">Fiche de l'album</h1>
<hr>
        <div class="card mb-3">
            <h3 class="card-header">{{leAlbum.nom}}</h3>
            <div class="row">
                <div class="col-3 d-flex align-items-center mx-auto">
                    <img class="avatar mx-auto d-block" src="{{leAlbum.image}}"></img>
                </div>
                <div class="col">
                    <div class="card-body">
                    <h5 class="card-title">
                        <a href="{{path('ficheArtiste', {'id': leAlbum.artiste.id})}}" class="badge badge-success" >{{leAlbum.artiste.nom}}</a>
                        </h5>
                    </div>
                        <p class="card-text">{{leAlbum.date}}</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">
                        {% for leStyle in leAlbum.styles %}
                            <span class="badge" style="bacground-color: {{leStyle.couleur}};">
                            {{leStyle.nom}}
                            </span>
                        {% endfor %}
                        </li>
                        <li class="list-group-item">
                            {% set nb = leAlbum.morceau|length %}
                            {{nb}} 
                            {% if nb>1 %} 
                            moeceaux 
                            {% else %} 
                            morceau 
                            {% endif %}
                        </li> 
                    </ul>
                </div>
            </div>
        </div>
<table class="table table-hover mx-auto">
  <thead>
    <tr>
      <th scope="col-3">Piste</th>
      <th scope="col-4">Titre</th>
      <th scope="col-1">Dur√©e</th>
      <th scope="col-3">note</th>
    </tr>
  </thead>
  <tbody>
  {% for leMorceau in leAlbum.morceau %}
        <tr>
            <td scope="row">{{leMorceau.piste}}</td>
            <td>{{leMorceau.titre}}</td>
            <td>{{leMorceau.duree}}</td>
        </tr>
  {% endfor %}
  </tbody>
</table>
{% endblock %}